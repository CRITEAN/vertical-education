<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_education_examination_form" model="ir.ui.view">
      <field name="name">view.education.examination.form</field>
      <field name="model">education.examination</field>
      <field name="arch" type="xml">
        <form string="Education Examination">
          <header>
            <field name="state" widget="statusbar" statusbar_visible="states"/>
          </header>
          <sheet>
            <group name="main">
              <h1>
                <field name="name" class="oe_highlight"/>
              </h1>
            </group>
            <group name="information" col="4">
              <field name="group_id"/>
              <field name="subject_id"/>
              <field name="date"/>
            </group>
            <group name="results">
              <field name="result_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_education_examination_tree" model="ir.ui.view">
      <field name="name">view.education.examination.tree</field>
      <field name="model">education.examination</field>
      <field name="arch" type="xml">
        <tree string="Education Examination">
          <field name="name"/>
          <field name="group_id"/>
          <field name="subject_id"/>
          <field name="date"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="view_education_examination_search" model="ir.ui.view">
      <field name="name">view.education.examination.search</field>
      <field name="model">education.examination</field>
      <field name="arch" type="xml">
        <search string="Education Examination">
          <field name="name"/>
          <field name="group_id"/>
          <field name="subject_id"/>
          <field name="date"/>
          <field name="state"/>
          <group string="Group By" name="groupby">
            <filter string="Name" context="{'group_by': 'name'}"/>
            <filter string="Group" context="{'group_by': 'group_id'}"/>
            <filter string="Subject" context="{'group_by': 'subject_id'}"/>
            <filter string="Date" context="{'group_by': 'date'}"/>
            <filter string="State" context="{'group_by': 'state'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="education_examination_action" model="ir.actions.act_window">
      <field name="name">Education Examination</field>
      <field name="res_model">education.examination</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education Examination.
        </p>
      </field>
    </record>

    <menuitem id="education_examination_menu" parent="education.education_exam_root" action="education_examination_action" sequence="20"/>

  </data>
</openerp>
