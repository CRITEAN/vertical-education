<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_education_group_form" model="ir.ui.view">
    <field name="name">view.education.group.form</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <form string="Education group">
        <header>
          <button name="do_toggle_active" type="object" attrs="{'invisible': [('state','in',['active','cancel'])]}" string="Toggle Active" class="oe_highlight"/>
          <button name="do_toggle_cancelled" type="object" attrs="{'invisible': [('state','in',['active','cancel', 'done'])]}" string="Cancelled" class="oe_highlight"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="code" readonly="1"/>
            </h1>
          </div>
          <group >
            <field name="name"/>
          </group>
          <group col="4">
            <field name="course_id"/>
            <field name="teacher_in_charge"/>
            <field name="date_from"/>
            <field name="date_to"/>
          </group>
          <notebook>
            <page string="Students">
              <group name="Students">
                <field name="record_ids" nolabel="1" readonly="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_education_group_tree" model="ir.ui.view">
    <field name="name">view.education.group.tree</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <tree string="Educaiton group">
        <field name="name"/>
        <field name="code"/>
        <field name="course_id"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="state" />
      </tree>
    </field>
  </record>

  <record id="view_education_group_search" model="ir.ui.view">
    <field name="name">view.education.group.search</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <search string="groups">
        <field name="name"/>
        <field name="code"/>
        <field name="course_id"/>
        <field name="record_ids"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="state" />
        <group string="Group By" name="groupby">
          <filter string="Name" context="{'group_by': 'name'}"/>
          <filter string="Code" context="{'group_by': 'code'}"/>
          <filter string="Course" context="{'group_by': 'course_id'}"/>
          <filter string="Record" context="{'group_by': 'record_ids'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="education_group_action" model="ir.actions.act_window">
    <field name="name">Groups</field>
    <field name="res_model">education.group</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to create a new Group.
      </p>
    </field>
  </record>

  <record id="group_sequence" model="ir.sequence">
    <field name="name">Group Sequence</field>
    <field name="code">education.group</field>
    <field name="prefix">GRP</field>
    <field name="padding">4</field>
  </record>

  <menuitem id="education_group" parent="education_course_root" action="education_group_action" sequence="20"/>

</odoo>
